<tools>
  <tool description="Creare DVI da un sorgente LaTeX" extensions=".tex" label="LaTeX → DVI" icon="compile_dvi">
    <job mustSucceed="true" postProcessor="rubber">rubber --maxerr -1 --short --force --warn all $filename</job>
    <job mustSucceed="true" postProcessor="no-output">$view $shortname.dvi</job>
  </tool>
  <tool description="Creare PDF da un sorgente LaTeX" extensions=".tex" label="LaTeX → PDF" icon="compile_pdf">
    <job mustSucceed="true" postProcessor="rubber">rubber --maxerr -1 --short --force --warn all --pdf $filename</job>
    <job mustSucceed="true" postProcessor="no-output">$view $shortname.pdf</job>
  </tool>
  <tool description="Creare PostScript da un sorgente LaTeX" extensions=".tex" label="LaTeX → PS" icon="compile_ps">
    <job mustSucceed="true" postProcessor="rubber">rubber --maxerr -1 --short --force --warn all --ps $filename</job>
    <job mustSucceed="true" postProcessor="no-output">$view $shortname.ps</job>
  </tool>
  <tool description="Visualizza DVI" extensions=".tex .dvi" label="Visualizza DVI" icon="view_dvi">
    <job mustSucceed="true" postProcessor="no-output">$view $shortname.dvi</job>
  </tool>
  <tool description="Visualizza PDF" extensions=".tex .pdf" label="Visualizza PDF" icon="view_pdf">
    <job mustSucceed="true" postProcessor="no-output">$view $shortname.pdf</job>
  </tool>
  <tool description="Visualizza un PostScript" extensions=".tex .ps" label="Visualizza PS" icon="view_ps">
    <job mustSucceed="true" postProcessor="no-output">$view $shortname.ps</job>
  </tool>
</tools>
